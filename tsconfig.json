{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "rootDirs": [
      "./src",
      "./test",
      "./types",
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types",
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
